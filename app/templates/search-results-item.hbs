<div class="icon">
  <img {{bind-attr src=view.content.icon}} />
</div>
<div class="detail">
  <a class="name">{{view.content.name}}</a>
  <a class="star-rating"> {{star-rating content=view.content.rating}} </a>
  <a class="category">{{view.content.brief}}</a>
  <a class="price">{{view.content.catalog}}</a>
</div>
{{#if view.content.installed}}
<a class="action open" {{action "openApp" target=view}}>
  {{view.label}}
</a>
{{else}}
<a class="action get" {{action "installApp" target=view}}>
  {{view.label}}
</a>
{{/if}}
